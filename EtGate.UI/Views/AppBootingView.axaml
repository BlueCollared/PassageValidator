<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:EtGate.UI.ViewModels;assembly=EtGate.UI.ViewModels"
             x:Class="EtGate.UI.Views.AppBootingView"
			 x:DataType="vm:AppBootingViewModel">
	
	<StackPanel Orientation="Vertical">
		<TextBlock>App booting</TextBlock>
		<StackPanel Orientation="Horizontal">
			<TextBlock>Qr Rdr Status</TextBlock>
			<TextBlock Text="{Binding QrRdrStatus}"/>
		</StackPanel>
	</StackPanel>
</UserControl>
